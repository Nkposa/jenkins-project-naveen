pipeline {
    agent any
    environment {
        image_name = 'nkposa/my-flask-app'
        image_tag = "nkposa/my-flask-app:v${BUILD_NUMBER}"
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Testing') {
            steps {
                sh 'pytest'
            }
        }
        stage('Docker login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-creds', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                    echo "Docker login successful"
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${image_tag} ."
                echo "Image built: ${image_tag} successfully"
            }
        }
        stage('Push Docker Image') {
            input {
                message "Do you want to push the Docker image ${image_tag}?"
                ok "Yes, push the image"
            }
            steps {
                sh "docker push ${image_tag}"
                echo "Image pushed: ${image_tag} successfully"
            }
        }
    }
}
