pipeline {
    agent any
    options {
        skipDefaultCheckout true
    }
    environment {
        server_credential = credentials('server-creds')
    }
    
    stages {
      stage ('check creds'){
        steps {
            echo "my creds are ${env.server_credential}"
            echo "Username: ${env.server_credential_USR}"
            echo "Password: ${env.server_credential_PSW}"
        }
      }
    
    stage('Checkout') {
        
        steps {
            echo "commit: ${env.GIT_COMMIT}"
            git url: 'https://github.com/Nkposa/jenkins-project-naveen.git', branch: 'main'
            echo "Checked out the repository by ${env.whoami}"
        }
    }
    stage('Build') {
        steps {
            echo "building id : ${env.BUILD_ID}"
            echo 'Building...'
            // Add your build steps here
        }
    }
    stage('install requirements') {
        steps {
            echo 'Installing requirements...'
            echo "Whoami: ${env.whoami}"
        }
    }
    stage('Test') {
       
        steps {
            echo 'Testing...'
            // Add your test steps here
        }
    }
    }
}



